
<p id="notice"><%= notice %></p>

<h1>Add Games</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_games.each do |new_game| %>
      <tr>
     <% if new_game.image.attached? %>
     <td><p><%= new_game.title %></p></td>
        <td><%= image_tag url_for(Game.find_by_id([new_game]).image) %> </td>
        <td><p><%= new_game.description %></p></td>
        <td><p><%= new_game.categories %></p></td>
        <td><%= link_to 'Show', new_game_path(new_game) %></td>
        <td><%= link_to 'Edit', edit_new_game_path(new_game) %></td>
        <td><%= link_to 'Destroy', "/new_games/"+new_game.id.to_s , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%else%>
      <td><p><%= new_game.title %></p></td>
      <td><img src="../assets/no_photo.svg", alt="pas de photos"></td>
        <td><p><%= new_game.description %></p></td>
        <td><%= link_to 'Show', new_game_path(new_game) %></td>
        <td><%= link_to 'Edit', edit_new_game_path(new_game) %></td>
        <td><%= link_to 'Destroy', "/new_games/"+new_game.id.to_s , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_new_game_path %>
