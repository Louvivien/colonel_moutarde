<div class="modal fade" id="modalUp" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Création de compte</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :pseudo %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Nom" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "nom@exemple.com" %>
          </div>

          <div class="field">
            <%= f.label :mot_de_passe %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Min. 6 caractères"%>
          </div>

          <div class="field">
            <%= f.label :confirmation_du_mot_de_passe %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation" %>
          </div>

          <div class="actions"><br />
            <%= f.submit "S'enregistrer" , :class => 'dorne-btn' %>
          </div>
        <% end %>

      </div>
      <div class="modal-footer d-flex justify-content-center">
        <p>Tu as déjà un compte ?</p>
        <p data-dismiss="modal" style="font-weight:bold" data-toggle="modal" href="#modalIn">Connecte-toi !</p>
      </div>
    </div>
  </div>
</div>