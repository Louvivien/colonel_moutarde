<div class="dorne-contact-area d-md-flex" id="contact">
  <!-- Contact Form Area -->
  <div class="contact-form-area equal-height"><div class="contact-form">
    <h5>S'enregistrer</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="row">
        <div class="col-12 col-md-6">
          <div class="field">
            <%= f.label :pseudo %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Nom", class: "form-control"  %>
          </div>
        </div>

        <div class="col-12 col-md-6">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "nom@exemple.com", class: "form-control"  %>
          </div>
        </div>

        <div class="col-12 col-md-6">
          <div class="field">
            <%= f.label :mot_de_passe %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Min. 6 caractÃ¨res", class: "form-control" %>
          </div>
        </div>

        <div class="col-12 col-md-6">
          <div class="field">
            <%= f.label :confirmation_du_mot_de_passe %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation", class: "form-control" %>
          </div>
        </div>

      <div class="actions">
        <%= f.submit "S'enregistrer" , :class => 'dorne-btn' %>
      </div>
    </div>
    <% end %>
  </div>
</div>